
<TooltipMDIconButton@MDIconButton+MDTooltip>
#:import rgba kivy.utils.get_color_from_hex

#:import Window kivy.core.window.Window
#:import hex kivy.utils.get_color_from_hex

#:import Window kivy.core.window.Window
<MyLayout>
    orientation: 'vertical'
    size: root.width, root.height
    ScreenManager:
        id:screen_manager
        MDScreen:
            name:"mainscreen"


            MDBoxLayout:
                pos_hint_x:1

                pos_hint:{'center_x':0.5,'center_y':0.649}
                size_hint_y:0.7

                AndroidCamera:
                    id:camera
                    #Choosing Default Camera Index
                    index: 0
                    on_picture_taken:
                        app.requesting(*args)
                    allow_stretch: True
                    play: True


            MDBoxLayout:
                pos_hint:{'center_x':0.5,'center_y':0.15}
                MDLabel:
                    id:label

                    halign:"center"
                    text:""
                    font_style:"Button"
            TooltipMDIconButton:
                tooltip_text:"See Logs"
                icon: 'arrow-right.png'
                on_release:
                    app.go_friend()

                pos_hint:{'center_x':0.9,'center_y':0.05}


            TooltipMDIconButton:
                tooltip_text:"Reset"
                icon: 'img/reset.png'
                on_release:
                    app.reset()

                pos_hint:{'center_x':0.1,'center_y':0.05}


            TooltipMDIconButton:

                tooltip_text:'Detect'
                icon:'img/camera_icon.png'
                pos_hint:{'center_x':0.3,'center_y':0.3}

                on_release:
                    app.activate()
            TooltipMDIconButton:
                tooltip_text:'Swap'
                icon:'img/rotate.png'
                pos_hint:{'center_x':0.7,'center_y':0.3}

                on_release:
                    app.swap()




        MDScreen:
            name:"log_list"





            BoxLayout:
                orientation:'vertical'

                ScrollView:

                    do_scroll_x: False
                    height: Window.height
                    MDList:
                        id: container
            TooltipMDIconButton:
                tooltip_text:"Back"
                icon: 'img/arrow-left.png'
                on_release:
                    app.go_back()

                pos_hint:{'center_x':0.9,'center_y':0.05}











